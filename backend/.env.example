# LocationIQ Pro - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=LocationIQ Pro
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_HOSTS=["*"]

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/locationiq_pro
DATABASE_ECHO=false

# External APIs Configuration
# =============================================================================
# üó∫Ô∏è  CORE APIS (Required for basic functionality)
# =============================================================================

# Google Places API - Get free key at: https://developers.google.com/maps/documentation/places/web-service/get-api-key
GOOGLE_PLACES_API_KEY=your-google-places-api-key-here

# OpenWeather API - Get free key at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your-openweather-api-key-here

# Mapbox API - Get free key at: https://www.mapbox.com/
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token-here

# =============================================================================
# üåü ENHANCED APIS (Optional - for better features)
# =============================================================================

# AirVisual API - For enhanced air quality data
AIRVISUAL_API_KEY=your-airvisual-api-key-here

# Real Estate APIs
RENTSPREE_API_KEY=your-rentspree-api-key-here
REALTOR_API_KEY=your-realtor-api-key-here

# Hotel & Travel APIs
BOOKING_API_KEY=your-booking-api-key-here
AMADEUS_API_KEY=your-amadeus-api-key-here
AMADEUS_API_SECRET=your-amadeus-api-secret-here

# Crime Data API
CRIME_DATA_API_KEY=your-crime-data-api-key-here

# =============================================================================
# ü§ñ AI SERVICES (Optional - for enhanced analysis)
# =============================================================================

# OpenAI API - For enhanced descriptions and analysis
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Claude API - Alternative AI provider
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =============================================================================
# üìä ANALYTICS & MONITORING (Optional)
# =============================================================================

# Google Analytics
GOOGLE_ANALYTICS_ID=your-google-analytics-id-here

# Mixpanel Analytics
MIXPANEL_TOKEN=your-mixpanel-token-here

# Error Monitoring
SENTRY_DSN=your-sentry-dsn-here

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key-here

# =============================================================================
# üì± COMMUNICATIONS (Optional)
# =============================================================================

# SendGrid for emails
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Twilio for SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here

# =============================================================================
# üí≥ PAYMENTS (Future features)
# =============================================================================

# Stripe for payments
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key-here
STRIPE_SECRET_KEY=your-stripe-secret-key-here

# IBGE API (Public - no key needed)
IBGE_API_BASE_URL=https://servicodados.ibge.gov.br/api/v1

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# Cache Configuration (Redis)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# ML Models Configuration
ML_MODELS_PATH=./ml/models/
MODEL_RETRAIN_INTERVAL_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/locationiq_pro.log

# Development/Testing
TESTING=false
TEST_DATABASE_URL=sqlite:///./test_locationiq_pro.db
